<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Kayit_ol"
    tools:showIn="@layout/activity_kayit_ol"
    android:background="@color/arkaplan"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@color/banner"
        >
        <Button
            android:id="@+id/banner2"
            android:layout_width="35dp"
            android:layout_height="40dp"
            android:background="@drawable/path"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="20dp"
            android:layout_gravity="center"/>
        <Button
            android:id="@+id/banner"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Mobadi"
            android:textAllCaps="false"
            android:textStyle="bold"
            android:background="@color/banner"
            android:textColor="@color/mavi"
            android:layout_gravity="center"
            android:textSize="30sp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_margin="25dp">

        <EditText
            android:id="@+id/etadi"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:hint="Kullanıcı Adı"/>

        <EditText
            android:id="@+id/etsoyadi"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:hint="Kullanıcı Soyadı"/>

        
        <EditText
            android:id="@+id/eteposta"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:hint="E-Posta"/>
        
        <EditText
            android:id="@+id/etsifre"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:hint="Şifre"/>
        
        <EditText
            android:id="@+id/etsifretekrar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:hint="Şifre Tekrarı"/>
        
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Kayıt Ol"
            android:textAllCaps="false"
            />
    </LinearLayout>

</LinearLayout>