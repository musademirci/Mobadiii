<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/arkaplan"
    tools:context=".Anasayfa">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@color/banner"
        >
        <Button
            android:id="@+id/banner2"
            android:layout_width="35dp"
            android:layout_height="40dp"
            android:background="@drawable/path"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="20dp"
            android:layout_gravity="center"/>
    <Button
        android:id="@+id/banner"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Mobadi"
        android:textAllCaps="false"
        android:textStyle="bold"
        android:background="@color/banner"
        android:textColor="@color/mavi"
        android:layout_gravity="center"
        android:textSize="30sp"/>
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_horizontal"
        android:padding="40dp">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/b1"
            android:drawableTop="@drawable/siparis"
            android:text="Sipariş Al"
            style="@style/AppTheme."
            android:textColor="@color/mavi"
            android:layout_margin="10dp"
            android:background="@drawable/textviewcircle"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:drawableTop="@drawable/para"
            android:text="Ödeme Al"
            style="@style/AppTheme."
            android:id="@+id/b2"
            android:layout_toRightOf="@id/b1"
            android:background="@drawable/textviewcircle"/>


        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/b4"
            style="@style/AppTheme."
            android:layout_margin="10dp"
            android:drawableTop="@drawable/masa2"
            android:text="Mekan Düzeni"
            android:layout_below="@id/b2"
            android:background="@drawable/textviewcircle"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:drawableTop="@drawable/urun"
            style="@style/AppTheme."
            android:text="Menü Düzenle"
            android:id="@+id/b5"
            android:layout_below="@id/b4"
            android:background="@drawable/textviewcircle"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/b6"
            android:layout_margin="10dp"
            style="@style/AppTheme."
            android:drawableTop="@drawable/siparisiptal"
            android:text="Siparişler"
            android:layout_toRightOf="@id/b4"
            android:layout_below="@id/b2"
            android:background="@drawable/textviewcircle"/>


    </RelativeLayout>






</LinearLayout>