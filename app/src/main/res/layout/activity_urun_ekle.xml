<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/arkaplan">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/arkaplan"
        android:orientation="vertical"
        tools:context=".UrunEkle">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:background="@color/banner">

            <Button
                android:id="@+id/banner2"
                android:layout_width="35dp"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="20dp"
                android:background="@drawable/path" />

            <Button
                android:id="@+id/banner"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="@color/banner"
                android:text="Mobadi"
                android:textAllCaps="false"
                android:textColor="@color/mavi"
                android:textSize="30sp"
                android:textStyle="bold" />
        </LinearLayout>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="25dp"
            android:text="Ürün Ekle"
            android:textColor="@color/banner"
            android:textSize="35sp" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="25dp">

            <TextView
                android:layout_marginTop="5dp"
                android:id="@+id/tv1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ürün Adi:"
                android:textColor="@color/banner"
                android:layout_alignBottom="@id/urunadi"
                android:textSize="25sp" />

            <EditText
                android:id="@+id/urunadi"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:inputType="text"
                android:textSize="20sp"
                android:textColor="@color/banner"
                android:theme="@style/CustomEditTextStyle" />
            <TextView
                android:id="@+id/tv2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:text="Ürün Fiyati:"
                android:layout_alignBottom="@id/urunfiyat"
                android:textColor="@color/banner"
                android:textSize="25sp" />
            <EditText
                android:id="@+id/urunfiyat"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv1"
                android:layout_alignParentRight="true"
                android:inputType="numberDecimal"
                android:textColor="@color/banner"
                android:textSize="25sp"
                android:theme="@style/CustomEditTextStyle"

                />

            <TextView
                android:id="@+id/tv3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv2"
                android:layout_marginTop="5dp"

                android:text="Eklenecek\nKategori:"
                android:textColor="@color/banner"
                android:textSize="25sp"

                />
            <EditText
                android:id="@+id/eturunkategori"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv2"
                android:layout_alignParentRight="true"
                android:inputType="text"
                android:textColor="@color/banner"
                android:textSize="25sp"
                android:theme="@style/CustomEditTextStyle"

                />


            <Button
                android:id="@+id/urunekle"
                android:layout_width="90dp"
                android:layout_height="50dp"
                android:layout_below="@id/tv3"
                android:layout_alignParentRight="true"
                android:text="Ekle"
                android:textColor="@color/banner"
                android:textSize="16sp"
                android:textStyle="bold" />


        </RelativeLayout>





    </LinearLayout>
</ScrollView>
